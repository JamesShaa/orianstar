# Ensure Apache uses the root index.html without redirecting elsewhere
DirectoryIndex index.html

RewriteEngine On

# Do NOT force a redirect from "/" to any other path/domain
# If your host had previous rules, this prevents accidental rewrites
RewriteRule ^$ index.html [L]

# Clean URLs â†’ map to subdirectory pages (no external redirects)
RewriteRule ^games/?$ playorionstars.net/games.html [L]
RewriteRule ^how-to-play/?$ playorionstars.net/how-to-play.html [L]
RewriteRule ^contact/?$ playorionstars.net/contact-us.html [L]

# Serve static assets normally
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule . - [L]

# Orion Stars Gaming - Redirect Configuration
# Choose one of the following redirect options by uncommenting the desired section

# Option 1: Redirect root to playorionstars.net subdirectory (301 redirect - SEO friendly)
# RewriteEngine On
# RewriteRule ^$ playorionstars.net/index.html [R=301,L]

# Option 2: Redirect to external domain (if you want to redirect to a different domain)
# RewriteEngine On
# RewriteRule ^(.*)$ https://yourdomain.com/$1 [R=301,L]

# Option 3: Redirect specific paths to different locations
# RewriteEngine On
# RewriteRule ^games/?$ playorionstars.net/games.html [R=301,L]
# RewriteRule ^contact/?$ playorionstars.net/contact-us.html [R=301,L]
# RewriteRule ^how-to-play/?$ playorionstars.net/how-to-play.html [R=301,L]

# Option 4: No redirects - serve content from root (currently active)
# This allows the enhanced root index.html to be served directly

# Option 5: Clean URL Routing (ACTIVE - Clean URLs for navigation)
RewriteEngine On
RewriteRule ^games/?$ playorionstars.net/games.html [L]
RewriteRule ^how-to-play/?$ playorionstars.net/how-to-play.html [L]
RewriteRule ^contact/?$ playorionstars.net/contact-us.html [L]
RewriteRule ^contact-us/?$ playorionstars.net/contact-us.html [L]

# Additional SEO and Performance Settings
<IfModule mod_headers.c>
    # Set proper cache headers
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    # Security headers
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Custom error pages
ErrorDocument 404 /playorionstars.net/contact-us.html
ErrorDocument 500 /playorionstars.net/contact-us.html

# Prevent flash of other content - ensure root index.html loads first
DirectoryIndex index.html

# Disable server signature to prevent revealing server info
ServerSignature Off
