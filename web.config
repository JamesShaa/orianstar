<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Clean URL rewrites -->
        <rule name="Rewrite Root To Main Gaming Page" stopProcessing="true">
          <match url="^$" />
          <action type="Rewrite" url="/playorionstars.net/index.html" />
        </rule>
        
        <rule name="Rewrite Games To Games Page" stopProcessing="true">
          <match url="^games/?$" />
          <action type="Rewrite" url="/playorionstars.net/games.html" />
        </rule>
        
        <rule name="Rewrite How To Play To How To Play Page" stopProcessing="true">
          <match url="^how-to-play/?$" />
          <action type="Rewrite" url="/playorionstars.net/how-to-play.html" />
        </rule>
        
        <rule name="Rewrite Contact To Contact Page" stopProcessing="true">
          <match url="^contact-us/?$" />
          <action type="Rewrite" url="/playorionstars.net/contact-us.html" />
        </rule>

        <!-- Redirect long paths to clean URLs -->
        <rule name="Redirect Long Games Path" stopProcessing="true">
          <match url="^playorionstars\.net/games\.html$" />
          <action type="Redirect" url="/games" redirectType="Permanent" />
        </rule>
        
        <rule name="Redirect Long How To Play Path" stopProcessing="true">
          <match url="^playorionstars\.net/how-to-play\.html$" />
          <action type="Redirect" url="/how-to-play" redirectType="Permanent" />
        </rule>
        
        <rule name="Redirect Long Contact Path" stopProcessing="true">
          <match url="^playorionstars\.net/contact-us\.html$" />
          <action type="Redirect" url="/contact-us" redirectType="Permanent" />
        </rule>
        
        <rule name="Redirect Long Index Path" stopProcessing="true">
          <match url="^playorionstars\.net/(index\.html)?$" />
          <action type="Redirect" url="/" redirectType="Permanent" />
        </rule>

        <!-- Redirect /index.html to root -->
        <rule name="Redirect IndexHtml To Root" stopProcessing="true">
          <match url="^index\.html$" />
          <action type="Redirect" url="/" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>


